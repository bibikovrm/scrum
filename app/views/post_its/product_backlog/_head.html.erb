<tr valign="top">
  <td width="300px">
    <div class="tabular">
      <p>
        <label><%= l(:label_product_backlog) %>:</label>
        <%- options = project.product_backlogs.collect{ |other_product_backlog|
              [other_product_backlog.name, path.call(other_product_backlog, :type => @type)]}
            options = options_for_select(options, path.call(product_backlog, :type => @type)) -%>
        <%= select_tag('selected_sprint_id', options,
                       :onchange => "if (this.value != '') { window.location = this.value; }") %>
      </p>
    </div>
  </td>
  <td>
    <%- unless product_backlog.description.blank? -%>
      <%= textilizable(product_backlog.description) %>
    <%- end -%>
  </td>
  <td width="250px">
    <div class="tabular">
      <%- pbis_count = @project.pbis_count
          total_sps = @project.total_sps
          closed_sps = @project.closed_sps
          percentage_closed_sps = (total_sps == 0.0) ? 0.0 : ((closed_sps * 100.0) / total_sps) -%>
      <p>
        <label><%= l(:label_count_of_pbis) %>:</label>
        <%= pbis_count %><br />
        <label><%= l(:label_total_sps) %>:</label>
        <%= total_sps %><br />
        <label><%= l(:label_closed_sps) %>:</label>
        <%= closed_sps %><br />
        <label><%= l(:label_percentage_closed_sps) %>:</label>
        <%= number_to_percentage(percentage_closed_sps , :precision => 1, separator: '.') %>
      </p>
    </div>
  </td>
</tr>
