<%= javascript_tag do %>
  $("[id^='settings_'][id$='_tracker_ids']").change(function() {
    $("[id^='fields_tracker_']").each(function(index, object) {
      var tracker_id = object.id.split("fields_tracker_")[1];
      if ($("#settings_pbi_tracker_ids option[value='" + tracker_id + "']").prop("selected") ||
          $("#settings_task_tracker_ids option[value='" + tracker_id + "']").prop("selected")) {
        $("#fields_tracker_" + tracker_id).show();
        $("#sprint_board_fields_tracker_" + tracker_id).show();
      } else {
        $("#fields_tracker_" + tracker_id).hide();
        $("#sprint_board_fields_tracker_" + tracker_id).hide();
      }
    });
  });
<% end %>
