<%= render :partial => "common/scrum_menu" %>

<h2><%= l(:label_product_backlog) %></h2>

<%- if @user_stories.empty? -%>
  <p class="nodata"><%= l(:label_no_data) %></p>
<%- else -%>
  <ul id="user_stories" class="user-stories">
    <%- @user_stories.each do |user_story|
        user_story_id = "user_story_#{user_story.id}" -%>
      <li id="<%= user_story_id %>"
          class="<%= user_story.post_it_css_class(:small_rotate => :true, :small_scale => true, :draggable => true) %>">
        <table>
          <tr>
            <td class="header-1">
              <%= "#{l(:field_position)}: #{user_story.position}" %>
              <%= ", #{l(:field_category)}: #{h(user_story.category.name)}" unless user_story.category.nil? %>
            </td>
            <td class="header-2">
              <%= authoring user_story.created_on, user_story.author %>
              <%= ". #{l(:label_updated_time, time_tag(user_story.updated_on))}".html_safe if user_story.created_on != user_story.updated_on %>
            </td>
            <td class="story-points" rowspan="2">
              <%= user_story.story_points %>
            </td>
            <td class="story-points-legend" rowspan="2" title="<%= l(:label_story_points) %>">
              <%= l(:label_story_point_unit, user_story.story_points) unless user_story.story_points.nil? %>
            </td>
          </tr>
          <tr>
            <td class="content" colspan="2">
              <%= link_to_issue(user_story) %>
            </td>
          </tr>
        </table>
      </li>
      <%- if User.current.allowed_to?(:edit_product_backlog, @project) and user_story.editable? -%>
        <%= javascript_tag do %>
          draggableOnTouchScreen("<%= user_story_id %>");
        <% end %>
      <%- end -%>
    <%- end -%>
  </ul>

  <%- if User.current.allowed_to?(:edit_product_backlog, @project) -%>
    <%= javascript_tag do %>
      $(document).ready(function() {
        $("#user_stories").sortable({
          update: function() {
            if ($.isFunction($.fn.setupAjaxIndicator)) {
              setupAjaxIndicator();
            }
            $.ajax({
              url: "<%= sort_project_product_backlog_index_path(@project) %>",
              type: "POST",
              data: $("#user_stories").sortable("serialize"),
              dataType: "script",
              error: function() {
                alert("<%= l(:error_changing_task_status) %>");
              },
              complete: function() {
                if ($.isFunction($.fn.hideOnLoad)) {
                  hideOnLoad();
                }
              }
            });
          }
        });
      });
    <% end %>
  <%- end -%>
<%- end -%>
