<%- if @project.module_enabled?(:scrum) -%>
  <%= issue_fields_rows do |rows|
    if @issue.sprint.nil?
      link = nil
    elsif @issue.sprint.is_product_backlog
      link = project_product_backlog_index_path(@project)
    else
      link = @issue.sprint
    end
    rows.left l(:label_sprint), link_to(h(@issue.sprint.name), link), :class => 'sprint'

    if @issue.is_pbi?
      rows.right l(:field_position), @issue.position, :class => 'position'
    elsif @issue.is_task?
      if @issue.pending_effort
        content = render_to_string(:partial => 'scrum_hooks/issues/pending_effort',
                                   :locals => {:issue => @issue})
        if User.current.allowed_to?(:edit_issues, @issue.project)
          content += render_to_string(:partial => 'scrum_hooks/issues/edit_pending_effort',
                                      :locals => {:issue => @issue})
        end
      end
      rows.right l(:field_pending_effort), content, :class => 'pending_effort'
    end
  end %>
<%- end -%>